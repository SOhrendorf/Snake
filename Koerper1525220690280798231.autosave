public class Koerper{
    int xpos;
    int ypos; 
    public Koerper(int pXpos, int pYPos){
        xpos = pXpos;
        ypos = pYPos;
    }

    public void apfel_zeichnen(){
        fill(0,250,0);
        rect(xpos*25, ypos*25, 25, 25);
    }

    public void body_zeichnen(int pXposKopf, int pYposKopf, int pDx, int pDy){
        fill(150,0, 0);

        rect((pXposKopf+(pDx*-1))*25, (pYposKopf+(pDy*-1))*25, 25, 25);
        //rect((xpos-1)*25,(ypos-1)*25,25,25);
    }
}
